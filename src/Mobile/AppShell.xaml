<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SampleApp.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SampleApp.Mobile.Views"
    FlyoutBehavior="Disabled"
    TabBarForegroundColor="White">

    <TabBar>
        <Tab Title="Messages">
            <ShellContent
                Title="Messages"
                ContentTemplate="{DataTemplate views:MessageListPage}"
                Route="MessageListPage"/>

        </Tab>
        <Tab Title="Persons">
            <ShellContent
                Title="Persons"
                ContentTemplate="{DataTemplate views:PersonListPage}"
                Route="PersonListPage" />
        </Tab>
    </TabBar>
</Shell>
