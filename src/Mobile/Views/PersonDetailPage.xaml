<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:SampleApp.Mobile.ViewModels"
             x:Class="SampleApp.Mobile.Views.PersonDetailPage"
             x:DataType="viewModels:PersonDetailPageViewModel"
             Title="PersonDetail">
    <VerticalStackLayout Margin="10">
        <Label  Text="{Binding Person.Name}"/>
        <Label Text="{Binding Person.NameKana}"/>
        <Label Text="{Binding Person.Email}"/>
    </VerticalStackLayout>
</ContentPage>